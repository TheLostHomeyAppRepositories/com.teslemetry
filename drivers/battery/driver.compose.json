{
  "name": {
    "en": "Powerwall"
  },
  "class": "battery",
  "$extends": ["teslemetry"],
  "capabilities": [
    "measure_battery",
    "measure_power",
    "operation_mode",
    "backup_reserve",
    "onoff.charge_grid",
    "allow_export",
    "onoff.storm",
    "alarm_generic.storm",
    "meter_power.charged",
    "meter_power.discharged"
  ],
  "capabilitiesOptions": {
    "meter_power.charged": {
      "title": { "en": "Charged Energy" }
    },
    "meter_power.discharged": {
      "title": { "en": "Discharged Energy" }
    },
    "onoff.charge_grid": {
      "title": { "en": "Charge From Grid" }
    },
    "onoff.storm": {
      "title": { "en": "Storm Watch" }
    },
    "alarm_generic.storm": {
      "title": { "en": "Storm Watch Active" }
    }
  },
  "energy": {
    "homeBattery": true,
    "meterPowerImportedCapability": "meter_power.charged",
    "meterPowerExportedCapability": "meter_power.discharged"
  }
}