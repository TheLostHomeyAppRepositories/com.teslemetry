{
  "name": {
    "en": "Powerwall"
  },
  "class": "battery",
  "$extends": ["teslemetry"],
  "capabilities": [
    "measure_battery",
    "measure_power",
    "operation_mode",
    "backup_reserve",
    "charge_from_grid",
    "allow_export",
    "storm_watch",
    "alarm_storm_watch_active",
    "meter_power.charged",
    "meter_power.discharged"
  ],
  "capabilitiesOptions": {
    "meter_power.charged": {
      "title": { "en": "Charged Energy" }
    },
    "meter_power.discharged": {
      "title": { "en": "Discharged Energy" }
    }
  },
  "energy": {
    "homeBattery": true,
    "meterPowerImportedCapability": "meter_power.charged",
    "meterPowerExportedCapability": "meter_power.discharged"
  }
}
